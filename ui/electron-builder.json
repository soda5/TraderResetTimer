{
  "appId": "com.example.myapp",
  "productName": "Tarkov Trader Timer",
  "directories": {
    "output": "dist_electron"
  },
  "files": [
    "dist/**/*",
    "public/**/*",
    "electron.js",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "src/assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": "dmg"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  }
}
